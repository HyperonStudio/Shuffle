/* miniprogram/pages/selectSongRange/selectSongRange.wxss */

page {
    background: #000;
    display: flex;
    flex-direction: column;
    height: 100%;
}

.pageContainer {
    width: 100%;
    height: 100%;
    position: absolute;
}

.rangeSelector {
    background-color: #00ff00;
}

.rangeSelectorThumb {
    background-color: #0000ff;
    text-align: center;
    color: #ffffff;
}

.card_info {
    border-radius: 4pt;
    display: flex;
    flex-direction: column;
    position: absolute;
}

.card_image_info {
    position: absolute;
    top: 0px;
    overflow: hidden;
    border-top-left-radius: 4pt;
    border-top-right-radius: 4pt;
}

.card_image {
    will-change: transform;
}

.card_toggle {
    width: 24px;
    height: 24px;
    position: absolute;
    right: 11px;
    bottom: 14px;
}

.card_progress {
    position: absolute;
    bottom: 0px;
    left: 0px;
    height: 3px;
    background-color: #fff;
}

.card_text_info {
    position: absolute;
    /* bottom: 0px; */
    overflow: hidden;
}

.card_songName {
    position: absolute;
    font-size: 16px;
    top: 14rpx;
    left: 14rpx;
    right: 14rpx;
    height: 30rpx;
    color: #fff;
    font-weight: 400;
    max-lines: 1;
    line-height: 30rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.card_singerName {
    position: absolute;
    font-size: 12px;
    color: #fff;
    top: 48rpx;
    left: 14rpx;
    right: 14rpx;
    height: 26rpx;
    font-weight: 400;
    opacity: 0.8;
    max-lines: 1;
    line-height: 26rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.card_desc {
    position: absolute;
    font-size: 12px;
    color: #fff;
    bottom: 16rpx;
    left: 14rpx;
    right: 14rpx;
    height: 26rpx;
    font-weight: 400;
    opacity: 0.7;
    max-lines: 1;
    line-height: 26rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.loadingUrlText {
    text-align: center;
    font-size: 16px;
    color: #fff;
    font-weight: 400;
    max-lines: 1;
    line-height: 30rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}