/* miniprogram/pages/postCard/postCard.wxss */

page {
    background: #000;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.uploadImage {
    border-radius: 4px;
    width: 240px;
    height: 240px;
    display: block;
    margin-left: auto;
    margin-right: auto;
    background: #fff;
    margin-top: 16px;
}

.uploadImageTip {
    width: 100%;
    height: 12px;
    opacity: 0.4;
    font-size: 12px;
    margin-top: 13px;
    color: #fff;
    font-weight: bold;
    letter-spacing: 1.5px;
    line-height: 12px;
    text-align: center;
}

.addSong {
    width: 80%;
    height: 34px;
    display: block;
    margin-left: auto;
    margin-right: auto;
    border-radius: 4px;
    margin-top: 36px;
    opacity: 0.1;
    background: #fff;
}

.addSongText {
    width: 54px;
    height: 50%;
    opacity: 0.8;
    margin-left: 10px;
    /* color: #fff; */
    font-size: 13px;
    line-height: 18px;
    position: absolute;
    margin: auto;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}