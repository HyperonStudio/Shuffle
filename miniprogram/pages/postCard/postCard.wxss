/* miniprogram/pages/postCard/postCard.wxss */

page {
    background: #000;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.uploadImage {
    border-radius: 4px;
    width: 240px;
    height: 240px;
    display: block;
    margin-left: auto;
    margin-right: auto;
    background: #ffffff11;
    margin-top: 16px;
    object-fit: cover;    
}

.uploadImageTip {
    width: 100%;
    height: 12px;
    opacity: 0.4;
    font-size: 12px;
    margin-top: 13px;
    color: #fff;
    font-weight: bold;
    letter-spacing: 1.5px;
    line-height: 12px;
    text-align: center;
}

.addSong {
    width: 80%;
    height: 30px;
    display: block;
    margin-left: auto;
    margin-right: auto;
    border-radius: 4px;
    margin-top: 36px;
    background-color: #ffffff11;
    text-align: left;
    color: white;
    font-size: 13px;
    padding-left: 10px;
    padding-top: 10px;
}

.desc {
    width: 83%;
    height: 112px;
    padding-left: 10px;
    padding-top: 10px;
    margin-left: auto;
    margin-right: auto;
    box-sizing: border-box;
    border-radius: 4px;
    margin-top: 16px;
    background-color: #ffffff11;
    resize: none;
    font-size: 14px;
    color: white;
}

.submit {
    width: 83%;
    height: 34px;
    border-radius: 17px;
    border-width: 1px;
    border-color: #fff;
    border-style: solid;
    font-size: 16px;
    color: #fff;
    background-color: #000;
    line-height: 18px;
    letter-spacing: 2px;
    margin-top: 58px;
    text-align: center;
    text-decoration: none;
    padding-top: 7px;
}
