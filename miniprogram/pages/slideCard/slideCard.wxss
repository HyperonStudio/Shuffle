/**index.wxss**/

page {
    background: #000;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.card_wrap {
    background: #f2f2f6;
    position: relative;
    width: 100%;
    height: 100%;
}

.operation-layout {
    width: 100%;
    height: 84rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    position: absolute;
    bottom: 0px;
}

.operation-layout-ipx {
    width: 100%;
    height: 84rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    position: absolute;
    bottom: 34px;
}

.card_wrap .card_item {
    position: absolute;
    width: 80%;
}

.card_wrap .card_item.card2 {
    /*top: 44px;
  left: 41px;*/
    z-index: 2;
    width: 70%;
    /*margin-left: 55px;
  margin-top: 82px;*/
    transform: translateY(150rpx) translateX(110rpx);
}

.card_wrap .card_item.card3 {
    /*top: 28px;
  left: 51px;*/
    width: 60%;
    transform: translateY(170rpx) translateX(150rpx);
    z-index: 1;
}

/*超过三张默认被第三张所覆盖*/

.card_info {
    height: 100%;
    background: #fff;
    border-radius: 4pt;
    display: flex;
    flex-direction: column;
}

.card_text_info {
    position: absolute;
    /* bottom: 0px; */
    overflow: hidden;
}

.card_image_info {
    position: absolute;
    top: 0px;
    overflow: hidden;
}

.info_top {
    position: absolute;
    top: 0px;
    height: 36px;
    display: flex;
    flex-direction: column;
    justify-content: left;
}

.card_image {
    will-change: transform;
}

.card_songName {
    margin-left: 12px;
    margin-right: 12px;
    font-size: 18px;
    padding-top: 10px;
    color: #fff;
    font-weight: bold;
    letter-spacing: 4px;
    opacity: 0.8;
    white-space: nowrap;
}

.card_songName_no_space {
    margin-left: 12px;
    margin-right: 12px;
    font-size: 18px;
    padding-top: 10px;
    color: #fff;
    font-weight: bold;
    opacity: 0.8;
    white-space: nowrap;
}

.card_singerName {
    font-size: 14px;
    margin-left: 12px;
    margin-right: 12px;
    color: #fff;
    font-weight: light;
    letter-spacing: 2.5px;
    opacity: 0.8;
    white-space: nowrap;
}

.card_singerName_no_space {
    font-size: 14px;
    margin-left: 12px;
    margin-right: 12px;
    color: #fff;
    font-weight: light;
    opacity: 0.8;
    white-space: nowrap;
}

.text_touch_area {
    left: 0rpx;
    right: 0rpx;
    position: absolute;
    top: 0rpx;
    bottom: 80rpx;
}

.card_desc { 
    font-size: 14px; 
    margin-left: 15px; 
    margin-right: 15px; 
    /* margin-top: 33px; */ 
    color: #fff; 
    line-height: 25px; 
    font-weight: 400; 
    top: 50%; 
    transform: translateY(-50%); 
    position: relative; 
}

.card_posterAvatar {
    position: absolute;
    border-radius: 12px;
    width: 24px;
    height: 24px;
    left: 16px;
    bottom: 14px;
}

.card_posterName {
    position: absolute;
    font-size: 12px;
    letter-spacing: 2px;
    height: 17px;
    left: 54px;
    bottom: 17.5px;
    color: #fff;
    opacity: 0.8;
}

.card_like {
    width: 24px;
    height: 24px;
    position: absolute;
    right: 11px;
    bottom: 14px;
}

.card_progress {
    position: absolute;
    bottom: 0px;
    left: 0px;
    height: 3px;
    background-color: #fff;
}

.card_toggle {
    width: 24px;
    height: 24px;
    position: absolute;
    right: 11px;
    bottom: 14px;
}

.loading-tip {  
    width: 50%;  
    height: 50%;  
    font-size: 14px;  
    color: #fff;  
    margin-top: 200rpx;  
    background-color: transparent;  
    text-align: center; 
} 

.sharegroup{
    float: right;
    width: 46rpx;
    height: 46rpx;
}

.sharegroup-img{
    width: 46rpx;
    height: 46rpx;
    position: fixed;
}

.sharegroup-btn{
    width: 46rpx;
    height: 46rpx;
    opacity: 0;
    border: 0 solid transparent;
    background: transparent;
}