/**index.wxss**/

page {
    background: #000;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.card_wrap {
    background: #f2f2f6;
    position: relative;
    width: 100%;
    height: 100%;
}

.card_wrap .card_item {
    position: absolute;
    width: 80%;
}

.card_wrap .card_item.card2 {
    /*top: 44px;
  left: 41px;*/
    z-index: 2;
    width: 70%;
    /*margin-left: 55px;
  margin-top: 82px;*/
    transform: translateY(150rpx) translateX(110rpx);
}

.card_wrap .card_item.card3 {
    /*top: 28px;
  left: 51px;*/
    width: 60%;
    transform: translateY(170rpx) translateX(150rpx);
    z-index: 1;
}

/*超过三张默认被第三张所覆盖*/

.card_wrap .card_item image {
    display: block;
    border-top-left-radius: 4pt;
    border-top-right-radius: 4pt;
}

.card_info {
    height: 100%;
    background: #fff;
    border-radius: 4pt;
    display: flex;
    flex-direction: column;
}

.card_text_info {
    overflow: hidden;
}

.info_top {
    display: flex;
    flex-direction: row;
    justify-content: left;
}

.card_image {
    will-change: transform;
}

.card_songName {
    font-size: 18px;
    padding-left: 12px;
    padding-top: 10px;
    color: #fff;
    font-weight: bold;
    letter-spacing: 4px;
    opacity: 0.8;
}

.card_singerName {
    font-size: 14px;
    margin-left: 6px;
    margin-top: 14px;
    color: #fff;
    font-weight: light;
    letter-spacing: 2.5px;
    opacity: 0.8;
}

.card_desc {
    font-size: 14px;
    margin-left: 15px;
    margin-right: 15px;
    margin-top: 33px;
    color: #fff;
    line-height: 25px;
    font-weight: 400;
}

.card_posterAvatar {
    position: absolute;
    border-radius: 12px 12px 12px 12px;
    width: 24px;
    height: 24px;
    left: 16px;
    bottom: 14px;
}

.card_posterName {
    position: absolute;
    font-size: 12px;
    letter-spacing: 2px;
    height: 17px;
    left: 54px;
    bottom: 17.5px;
    color: #fff;
    opacity: 0.8;
}

.info_light {
    padding-right: 30rpx;
}

.info_content {
    font-size: 9pt;
    padding-left: 30rpx;
    padding-top: 12rpx;
    color: #8e8e8e;
}

.info_bottom {
    font-size: 9pt;
    padding-left: 30rpx;
    padding-top: 12rpx;
}

.card_info_other {
    height: 160rpx;
    background: ghostwhite;
    border-bottom-left-radius: 10px;
    border-bottom-right-radius: 10px;
    box-shadow: 6px 8px 50px 10px #ccc;
}

.operate-area {
    margin: 0 auto;
    margin-top: 1030rpx;
    text-align: center;
    padding-bottom: 10rpx;
}

/*.operate-area view{
  display: inline-block;
}*/

.operate-area .want {
    margin: 0 auto;
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    padding: 2px;
    border: 2px solid #ff7981;
    text-align: center;
}

.operate-area .want view {
    margin-top: 40rpx;
    color: #ff7981;
}

.inline_block view {
    display: inline-block;
}

.operate-area .noWant {
    margin: 0 auto;
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    padding: 4px;
    background-color: #ff7981;
    text-align: center;
}

.operate-area .noWant view {
    margin-top: 40rpx;
    color: white;
}

/*蒙版遮住防止下一张进行滑动*/

.card_opacity {
    height: 160rpx;
    border-bottom-left-radius: 10px;
    border-bottom-right-radius: 10px;
    /*box-shadow: 6px 8px 50px 10px #ccc;*/
}

.card_info_opacity {
    height: 160rpx;
    border-bottom-left-radius: 10px;
    border-bottom-right-radius: 10px;
    color: #fffff0;
}

.loading-tip {
    width: 50%;
    height: 50%;
    font-size: 14px;
    color: #fff;
    margin: auto;
    background-color: transparent;
    text-align: center;
}

.card_like {
    width: 24px;
    height: 24px;
    position: absolute;
    right: 11px;
    bottom: 14px;
}
